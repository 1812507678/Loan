<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhiyuan.com.loan.activity.AccountnfoActivity">

    <RelativeLayout
        android:id="@+id/rl_home_top"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#41AA53" >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_centerVertical="true"
            android:onClick="back"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="账户信息"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personcenter_persondata"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" >

        <zhiyuan.com.loan.view.CircleImageView
            android:id="@+id/iv_personcenter_iocn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/widget_dface" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/share_table_indicator" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_personcenter_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/share_table_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未设置"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_account_indocator1"
            android:textColor="#8F8F8F" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:id="@+id/rl_personcenter_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qq"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/share_table_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_account_indocator2"
            android:textColor="#8F8F8F" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:id="@+id/rl_personcenter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <ImageView
            android:id="@+id/iv_account_indocator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/share_table_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personcenter_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_account_indocator3"
            android:textColor="#8F8F8F" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon_line2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />

        <TextView
            android:id="@+id/tv_personcenter_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#8F8F8F" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personcenter_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登陆"
            android:layout_centerVertical="true"
            android:textColor="#4F4F4F" />
    </RelativeLayout>

</LinearLayout>
