<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_chattitem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:59"
        android:background="@drawable/bg_time"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chattitem_time" >
        <zhiyuan.com.loan.view.CircleImageView
            android:id="@+id/iv_chattitem_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ease_default_avatar"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_chatt_voice"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/ease_chatto_voice_playing"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_item_voice_left"
            android:layout_toLeftOf="@id/iv_chattitem_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_chatt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5''"
            android:layout_toLeftOf="@id/iv_chatt_voice"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_chattitem_message"
            android:layout_toLeftOf="@id/iv_chattitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_message_left"
            android:gravity="left|center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="大sdsdccc是多少多少"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/iv_chatt_iamgeitem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_chattitem_icon"
            android:layout_marginRight="5dp"
            android:src="@drawable/image_default"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="fitXY"
            android:padding="1dp"
            android:maxWidth="120dp"
            android:maxHeight="180dp"
            android:minWidth="80dp"
            android:minHeight="150dp"
            android:visibility="gone"/>

    </RelativeLayout>





</RelativeLayout>