<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhiyuan.com.loan.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/rl_home_top"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF" >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"
            android:layout_alignParentTop="true"></View>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bg_back"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:padding="5dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="设置"
            android:textColor="#000"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_me_password"
        style="@style/option_item_rl"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:id="@+id/ll_me_suggest"
        style="@style/option_item_rl"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="意见反馈"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:id="@+id/ll_me_update"
        style="@style/option_item_rl"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="版本更新"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />
    <RelativeLayout
        android:id="@+id/ll_me_aboutus"
        style="@style/option_item_rl"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="关于我们"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/ll_me_exit"
        style="@style/option_item_rl"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/option_item_text"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="退出登录" />
    </LinearLayout>

</LinearLayout>
