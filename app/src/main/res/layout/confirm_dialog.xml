<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/news_gb"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="关注微信公众号"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="visible"
               />
            <ImageView
                android:id="@+id/iv_tt1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/qrscan"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_tv1"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_dialog_weixin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="laohancoming"
            android:textColor="#0b9a27"
            android:textSize="15sp"
            android:visibility="visible" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_dialog_qrcncan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/qrscan"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="微信搜索公众号,或保存图片,打开微信扫一扫,从相册选取二维码"
            android:textSize="10sp"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp" >
            <TextView
                android:id="@+id/bt_choose_copy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_loan"
                android:text="复制公众号"
                android:padding="10dp"
                android:textColor="#666"
                android:gravity="center"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/bt_choose_saveimage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_loan"
                android:text="保存图片"
                android:padding="10dp"
                android:textColor="#666"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
